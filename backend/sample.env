LISTEN_ADDRESS=:8000
DB_PORT=5432
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=ku_work

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Origin,Content-Length,Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=43200

# JWT Configuration
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_AT_LEAST_32_BYTES_LONG

# Session Configuration
MAX_SESSIONS_PER_USER=10

# Cookie Configuration
COOKIE_SECURE=true

# GoogleOAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Swagger Configuration
SWAGGER_HOST=localhost:8000

# AI Configuration
# Options: "ollama" (requires Ollama server) or "dummy" (for testing)
APPROVAL_AI=dummy
# OLLAMA_HOST=http://localhost:11434 (required if using ollama)
APPROVAL_AI=dummy

# Email Configuration (dummy, SMTP, gmail)
EMAIL_PROVIDER=dummy
EMAIL_TIMEOUT_SECONDS=30

# SMTP Configuration (Select provider as SMTP)
SMTP_SERVER_HOST=SMTP.server.host
SMTP_SERVER_PORT=587
SMTP_SENDER=smtp_sender_username_mail
SMTP_PASSWORD=sender_password

# GMAIL Configuration (Select provider as gmail)
GMAIL_OAUTH_CLIENT_ID=your_oauth_client_id
GMAIL_OAUTH_CLIENT_SECRET=your_oauth_client_scret
# Follow the step in the email_config.md guide to get Access and Refresh token.
GMAIL_OAUTH_ACCESS_TOKEN=
GMAIL_OAUTH_REFRESH_TOKEN=
