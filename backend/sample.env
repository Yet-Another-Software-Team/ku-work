LISTEN_ADDRESS=:8000
DB_PORT=5432
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=ku_work

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Origin,Content-Length,Content-Type,Authorization,X-Turnstile-Token
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=43200

# JWT Configuration
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_AT_LEAST_32_BYTES_LONG

# Session Configuration
MAX_SESSIONS_PER_USER=10

# Cookie Configuration
COOKIE_SECURE=true

# GoogleOAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Swagger Configuration
SWAGGER_HOST=localhost:8000

# AI Configuration
# Options: "ollama" (requires Ollama server) or "dummy" (for testing)
APPROVAL_AI=dummy
# OLLAMA_HOST=http://localhost:11434 (required if using ollama)
APPROVAL_AI=dummy

# Email Configuration (dummy, SMTP, gmail)
EMAIL_PROVIDER=dummy
EMAIL_TIMEOUT_SECONDS=30

# Email Retry Configuration
EMAIL_RETRY_MAX_ATTEMPTS=3
EMAIL_RETRY_INTERVAL_MINUTES=30
EMAIL_RETRY_MAX_AGE_HOURS=24

# SMTP Configuration (Select provider as SMTP)
SMTP_SERVER_HOST=SMTP.server.host
SMTP_SERVER_PORT=587
SMTP_SENDER=smtp_sender_username_mail
SMTP_PASSWORD=sender_password

# GMAIL Configuration (Select provider as gmail)
GMAIL_OAUTH_CLIENT_ID=your_oauth_client_id
GMAIL_OAUTH_CLIENT_SECRET=your_oauth_client_scret
# Follow the step in the email_config.md guide to get Access and Refresh token.
GMAIL_OAUTH_ACCESS_TOKEN=
GMAIL_OAUTH_REFRESH_TOKEN=

# File Handling Provider
# Choose storage backend for file uploads. Supported values:
#  - local (default): store files on local filesystem
#  - gcs: store files in Google Cloud Storage
#
# Set FILE_PROVIDER to control which provider the application uses.
# When using 'local', set LOCAL_FILES_DIR to the directory where files are written.
# When using 'gcs', set the GCS_* variables below.
FILE_PROVIDER=local
LOCAL_FILES_DIR=./files

# Google Cloud Storage (GCS) Configuration (used when FILE_PROVIDER=gcs)
# - GCS_BUCKET: the name of the GCS bucket to use
# - GCS_CREDENTIALS_PATH: path to the service account JSON credentials file (optional:
#   if empty, application will use default application credentials)
# - GCS_PROJECT_ID: optional GCP project id
# - GCS_STORAGE_CLASS: optional storage class (e.g. STANDARD, NEARLINE)
GCS_BUCKET=
GCS_CREDENTIALS_PATH=
GCS_PROJECT_ID=
GCS_STORAGE_CLASS=STANDARD

# Turnstile
TURNSTILE_SECRET=